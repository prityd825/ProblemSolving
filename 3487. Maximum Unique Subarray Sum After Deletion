class Solution {

public:
    int maxSum(vector<int>& nums) {
         std::set<int> unique;
        int result = 0;
        int maxNegative = INT_MIN;

        for (int num : nums) {
            if (num > 0) {
                unique.insert(num);
            } else {
                maxNegative = std::max(maxNegative, num);
            }
        }

        for (int num : unique) {
            result += num;
        }

        return result == 0 ? maxNegative : result;
    }
};
